<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ExpLogs.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ExpLogs"
    Shell.FlyoutBehavior="Flyout"
    Title="ExpLogs">

    <!-- Hamburger Menu (Flyout) -->
    <FlyoutItem Title="ExpLogs" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent
            Title="Show Sheet"
            ContentTemplate="{DataTemplate local:ShowSheetPage}"
            Route="ShowSheetPage" />
    </FlyoutItem>

</Shell>
